{
  "manifest_version": 3,
  "name": "YouTube Sync",
  "version": "1.0.0",
  "description": "Watch YouTube videos in perfect sync with others in real-time",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://syncio-vmkw.onrender.com/*",
    "https://*.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["floating-window.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}